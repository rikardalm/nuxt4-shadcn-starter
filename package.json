{
  "name": "nuxt4-shadcn-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web": "bun run --filter @repo/web dev",
    "bff": "bun run --filter @repo/bff dev",
    "cli": "bun run --filter @repo/cli dev",
    "build": "bun run --filter @repo/web build && bun run --filter @repo/bff build && bun run --filter @repo/cli build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:vue": "prettier --write \"**/*.vue\"",
    "lint:vue": "prettier --check \"**/*.vue\"",
    "typecheck": "bun run --filter @repo/web typecheck && bun run --filter @repo/bff typecheck && bun run --filter @repo/cli typecheck",
    "precommit": "bun run lint:fix && bun run typecheck",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run precommit"
  },
  "packageManager": "bun@1.2.3",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "ultracite": "7.1.3"
  }
}
