{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && simple-git-hooks",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:vue": "prettier --write \"**/*.vue\"",
    "lint:vue": "prettier --check \"**/*.vue\"",
    "precommit": "bun run lint:fix && bun run typecheck"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run precommit"
  },
  "packageManager": "bun@1.2.3",
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "nuxt": "^4.1.1",
    "reka-ui": "^2.5.0",
    "tailwind-merge": "^3.3.1",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@nuxtjs/sitemap": "^7.4.3",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "autoprefixer": "^10.4.21",
    "nuxt-schema-org": "^5.0.6",
    "nuxt-security": "^2.4.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shadcn-nuxt": "^2.2.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.13",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vue-tsc": "^3.0.6"
  }
}
